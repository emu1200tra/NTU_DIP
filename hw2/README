.PHONY: all

CC=g++  
LN=g++
All: prob1 prob2
prob1 : 
	@echo "hw2" 
	@echo "compiling and linking the code"
	$(CC) -std=c++11 -c hw2.cpp 
	$(LN) -std=c++11 -o hw2 hw2.o 
	@echo "running the program"
	./hw2
prob2 : 
	@echo "hw2-1" 
	@echo "compiling and linking the code"
	$(CC) -std=c++11 -c hw2-1.cpp 
	$(LN) -std=c++11 -o hw2-1 hw2-1.o 
	@echo "running the program"
	./hw2-1